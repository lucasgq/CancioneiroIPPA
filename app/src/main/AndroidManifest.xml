<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.ippontadareia.cancioneiroippa">

    <!-- @string/app_name -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Cancioneiro IPPA"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SummaryActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LyricsActivity"
            android:parentActivityName=".SummaryActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.ippontadareia.cancioneiroippa.SummaryActivity" />
        </activity>
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchSongActivity"
            android:parentActivityName=".SummaryActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.ippontadareia.cancioneiroippa.SummaryActivity" />
        </activity>
        <activity
            android:name=".FavoritesActivity"
            android:parentActivityName=".SummaryActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.ippontadareia.cancioneiroippa.SummaryActivity" />
        </activity>
    </application>

</manifest>